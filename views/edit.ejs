<% layout('../layouts/boilerplate') %>
<link rel="stylesheet" href="/styles/edit.css" />
<section class="edit">
  <a href="/mylists"> &lt; Regresar a mi listas</a>
  <form action="/mylists/<%= lista2._id%>?_method=PUT" method="post" class="edit-form">
    <div>
      <label for="lnombre">Nombre de la lista</label>
      <input
        type="text"
        name="dtlista[nombre]"
        id="lnombre"
        required
        placeholder="Nombre de la lista"
        value="<%= lista2.nombre %>"
      />
    </div>
    <div>
      <label for="ldesc">Descripcion</label>
      <textarea name="dtlista[descripcion]" id="ldesc" cols="30" rows="10">
<%= lista2.descripcion%></textarea
      >
    </div>
    <button>Guardar Cambios</button>
  </form>
</section>
